doctype html
html(lang=ja)
  head
    include template/_header
    title Amazon IP Checker
    script(src='js/index.js')
  body
    .container#ip(role=main)
      h1 Amazon IP Checker
      form(@submit.prevent="", @submit='submit()')
        .form-group
          label(for='address') IP Address
          input#address.form-control(type='text', v-model='address')
        button.btn.btn-primary(type='submit') Submit

      dl.dl-horizontal(style='margin-top: 20px')
        dt Region
        dd(v-text='region')
        dt Service
        dd(v-text='service')
